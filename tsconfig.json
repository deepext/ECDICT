{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "allowJs": true,
    "declaration": true,
    "esModuleInterop": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [
      "node"
    ]
  },
  "baseUrl": ".",
  "paths": {
    "*": [
      "src/*",
      "tests/*"
    ]
  },
  "include": [
    "./src/**/*"
  ]
}